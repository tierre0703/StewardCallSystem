<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default"
    tools:context="com.example.milanchinthaka.bbcallbutton_android.LoginActivity"
    tools:deviceIds="wear_square">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_row="0"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:editable="false"
                android:enabled="false"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textColor="@color/bluelight"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <EditText
                android:id="@+id/txtIP2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_column="0"
                android:layout_row="6"
                android:background="@color/lightblueback"
                android:digits="0123456789."
                android:hint="IP Address"
                android:inputType="numberDecimal"
                android:paddingLeft="5dp"
                android:textColor="@color/textBlue"
                android:textColorHighlight="@color/textBlue"
                android:textColorHint="@color/textBlue"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <EditText
                android:id="@+id/txtUName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_columnSpan="2"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:background="@color/lightblueback"
                android:ems="12"
                android:hint="Username"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:textColor="@color/textBlue"
                android:textColorHint="@color/textBlue"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="1"
                android:layout_weight="1"
                android:background="@color/lightblueback"
                android:ems="12"
                android:fontFamily="sans-serif"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:textColor="@color/textBlue"
                android:textColorHint="@color/textBlue"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_row="2"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="Connect"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_column="1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_row="2"
                android:layout_weight="1"
                android:background="@color/mattYellow"
                android:text="Cancel"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_weight="0.10"
                android:background="@color/colorPrimaryDark"
                app:srcCompat="@android:drawable/stat_sys_speakerphone" />

            <TextView
                android:id="@+id/fileNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.94"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="@color/textBlue"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:padding="80dp"
                android:scaleType="center"
                app:srcCompat="@mipmap/ic_logo" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
