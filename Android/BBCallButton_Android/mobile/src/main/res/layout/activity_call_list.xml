<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default"
    android:orientation="vertical"
    tools:context="com.example.milanchinthaka.bbcallbutton_android.CallListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_column="0"
        android:layout_gravity="top"
        android:layout_row="0"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/historyBtnHistory"
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/lightbluebacklist"
            android:padding="8dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/history" />

        <ImageButton
            android:id="@+id/btnSettingsHistory"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:elevation="1dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/settings" />

        <ImageButton
            android:id="@+id/configBtnHistory"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_config" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:scaleType="fitEnd"
            app:srcCompat="@mipmap/ic_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/colorPrimaryDark"
            android:editable="false"
            android:enabled="false"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="15dp"
            android:text="Supreme CallSystem"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="23sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/mattYellow"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:editable="false"

            android:enabled="false"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="15dp"
            android:showDividers="middle"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:editable="false"
            android:enabled="false"
            android:gravity="center_vertical|center_horizontal"
            android:text="Call History Page"
            android:textAlignment="center"
            android:textColor="@color/textBlue"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:background="@drawable/border3"
            android:text="TextView" />
    </LinearLayout>

    <ListView
        android:id="@+id/callListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />



</LinearLayout>
